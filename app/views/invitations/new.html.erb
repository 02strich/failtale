  <h2 class="title">Invite someone</h2>
  <div class="content">

<% form_for @invitation, :html => { :class => "form" } do |f| %>
  <%= f.error_messages %>
  <div class="column left">
    <%= render :partial => "form", :object => f %>
  </div>
