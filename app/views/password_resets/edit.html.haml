%div.block.inner
  %h2 Change my password
  - form_for @user, :url => password_reset_path, :method => :put do |f|
    = f.error_messages
    %p.clearfix
      = f.label :password, nil, :style => 'font-size: 14px'
      = f.password_field :password, :class => 'text'
    %p.clearfix
      = f.label :password_confirmation, nil, :style => 'font-size: 14px'
      = f.password_field :password_confirmation, :class => 'text'
    %p
      = submit_tag "Update my password and log me in", :class => 'button submit'

