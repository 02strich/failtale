<div class="block" id="block-project">
  <div class="secondary-navigation">
    <% menu_block do |link|
      link.to 'Summary', occurence
      link.to 'Backtrace', [:backtrace, occurence]     if occurence.backtrace?
      link.to 'Environment', [:environment, occurence] if occurence.properties?
      
      if error.occurences.count > 1
        link.to "#{error.occurences.count} other occurences", error
      end
    end %>
    <div class="clear"></div>
  </div>
  <h2 class="title"><%= occurence.name %></h2>
  <div class="content">

<% if occurence.properties? %>
<table class="table">
  <tr>
    <th class="first last" colspan="2">Properties</th>
  </tr>
  <% occurence.properties.each do |name, value| %>
    <tr>
      <td><%=h name %></td>
      <td><%=h value %></td>
    </tr>
  <% end %>
</table>
<% end %>

  </div>
</div>

<% actions do |link|
  if error.closed
    link.to 'Mark as not closed', error_path(error, :error => {:closed => '0'}), :method => :put
  else
    link.to 'Mark as closed', error_path(error, :error => {:closed => '1'}), :method => :put
  end
end %>