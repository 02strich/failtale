%tr
  %td.select
    = error.last_occurence.created_at.to_s :short
    = hidden_field_tag "errors[#{error.id}]", "0"
    = check_box_tag "errors[#{error.id}]"
  %td.label
    = error.last_occurence.reporter
  %td
    = link_to h(truncate(error.name, :length => 100)), error
  %td.count
    %div
      %div
        %div
          = error.occurences.size
