- block error.name do |link|
  - occurence = error.last_occurence
  - link.to 'Summary /', error
  - link.to 'Backtrace /', [:backtrace, occurence]     if occurence.backtrace?
  - link.to 'Environment', [:environment, occurence] if occurence.properties?
  
  %p= error.description
  
  = render_reporter error.last_occurence
  
  - if error.backtrace?
    %h3 Backtrace
    %pre=h error.backtrace.split("\n")[0..5].join("\n")
    %br
  
  %table.table
    %tr
      %th.first
      %th.last Occurences
    
    =render occurences
  = will_paginate occurences
  %br
  
- actions do |link|
  - if error.closed
    - link.to ('Mark as not closed', error_path(error, :error => {:closed => '0'}), :method => :put, :class => "button markNotClosed")
  - else
    - link.to ('Mark as closed', error_path(error, :error => {:closed => '1'}), :method => :put, :class => "button markClosed")
