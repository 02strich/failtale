%table
  %tr
    %th.select
      = check_box_tag '__ig'
    %th.label
      %span label
    %th 
      %span error
    %th.count 
      %span count
  - unless open_errors.empty?
    = render open_errors
  - else
    %tr
      %td{:colspan=>4} There are no open errors.

= will_paginate(open_errors)
