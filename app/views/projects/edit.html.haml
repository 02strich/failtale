- sidebar_blocks[:members]  = true

- block 'Edit this project' do
  - form_for project, :html => {:class=>'form userForm'} do |f|
    = render :partial => f
    .group.navform
      = f.submit 'Save', :class => 'button'

%div.block.inner.api-key
  %h2
    = "API key"
  %strong
    = @project.api_token

- actions do |link|
  - link.to 'Reset API key', reset_api_key_project_path(project), :class => 'button', :confirm => "Are you sure you want to reset the API key?"
  - link.to 'Delete this project', project_path(project), :class => 'button delete', :method => :delete, :confirm => "Are you sure you want to delete this project?"